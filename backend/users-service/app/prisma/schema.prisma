generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  description String
  difficulty  String
  id_         String   @map("id")
  languages   String[]
  status      String
  title       String
  topic_tags  String[]
  url         String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  avatarUrl String
  email     String
  role      String
  questions Question[]
}
