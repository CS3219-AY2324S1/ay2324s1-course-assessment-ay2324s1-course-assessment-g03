generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type QuestionCodeSnippets {
  code     String
  lang     String
  langSlug String
}

model Question {
  id            String                 @id @default(auto()) @map("_id") @db.ObjectId
  category      String
  code_snippets QuestionCodeSnippets[]
  description   String
  difficulty    String
  hints         String[]
  id_           String                 @map("id")
  languages     String[]
  paid_only     Boolean
  test_cases    String[]
  title         String
  topic_tags    String[]
  updated_at    Int
  url           String
  userId        String                 @db.ObjectId
  user          User                   @relation(fields: [userId], references: [id])
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  questions Question[]
}
