generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type QuestionCodeSnippets {
  code     String
  lang     String
  langSlug String
}

model Question {
  id           String                 @id @default(auto()) @map("_id") @db.ObjectId
  category     String
  codeSnippets QuestionCodeSnippets[]
  description  String
  difficulty   String
  id_          String                 @map("id")
  status       String
  title        String
  topic_tags   String[]
  updatedAt    DateTime               @db.Date
  url          String
  userId       String                 @db.ObjectId
  user         User                   @relation(fields: [userId], references: [id])
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  avatarUrl String
  email     String
  role      String
  questions Question[]
}
