generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                 String            @id @default(auto()) @map("_id") @db.ObjectId
  avatarUrl          String?
  email              String            @unique
  name               String?
  questionAttemptIds String[]          @db.ObjectId
  questionAttempts   QuestionAttempt[] @relation(fields: [questionAttemptIds], references: [id])
  role               Role              @default(USER)
}

model QuestionAttempt {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  questionId String
  userIds    String[] @db.ObjectId
  users      User[]   @relation(fields: [userIds], references: [id])
  code       String
  lang       String
  createdAt  DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
